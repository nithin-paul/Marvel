@model IEnumerable<Marvel.Models.ItemVM>
<section class="content">
    <div class="container">
        <div class="row">
            <div class="clear"></div>
            @if (Model != null)
            {
                <h3 class="head1">@ViewBag.CategoryName</h3>
                <div class="grid_12 ">
                    <div class="gallery">
                        @if (@ViewBag.Description != null)
                        {
                            <div class="block1" style="padding: 2%;margin-bottom:2%;font-size:18px;">
                                @ViewBag.Description
                            </div>
                        }
                        <div class="row">
                            @foreach (var items in Model)
                            {
                                <div class="grid_4">
                                    <div class="gal_item">
                                        <a href="/Home/Item/@items.Id">
                                            <img src="~/Content/Images/@(Path.GetFileNameWithoutExtension(items.Images.FirstOrDefault(x => x.IsPrimary).Name) + "_thumb" + Path.GetExtension(items.Images.FirstOrDefault(x => x.IsPrimary).Name))" alt="">
                                            <div class="gal_caption">@items.Name</div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
