<!DOCTYPE HTML>
<html>
<head>
    <title>Marvel | Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" href="~/Content/Images/fav.png">
    <meta name="keywords" content="Marvel, Bags, shopping" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet">
    <!-- jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="page-container">
        <!--/content-inner-->
        <div class="left-content">
            <div class="inner-content">
                <div class="header_bg">
                    <div class="header" style="padding-left:20px">
                                <a href="/Home"><img src="~/Content/Images/logo.png" class="img-responsive" alt=""> </a>

                            <div class="clearfix"> </div>
                    </div>
                </div>
                <!-- //header-ends -->
                <!--content-->
                <div class="content">
                    <div class="women_main" style="padding:20px">
                        @RenderBody()
                        <div class="footer">
                            <p>© @DateTime.Now.Year Marvel</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/sidebar-menu-->
        <div class="sidebar-menu">
            <header class="logo1">
                <a href="#" class="sidebar-icon"> <span class="fa fa-bars"></span> </a>
            </header>
            <div style="border-top:1px ridge rgba(255, 255, 255, 0.15)"></div>
            <div class="menu">
                <ul id="menu">
                    <li><a href="/"><i class="fa fa-home"></i> <span>Home</span></a></li>
                    <li id="menu-academico">
                        <a href="#"><i class="fa fa-archive"></i> <span>Categories</span> <span class="fa fa-angle-right" style="float: right"></span></a>
                        <ul id="menu-academico-sub">
                            <li id="menu-academico-avaliacoes">
                                <a href="/Home/Category"><i class="fa fa-plus-square"></i> <span>Add Category</span></a>
                            </li>
                            @Html.Action("CategorySideBar", "Home")
                        </ul>
                    </li>
                    <li id="menu-academico">
                        <a href="#"><i class="fa fa-sliders"></i> <span>Sliders</span> <span class="fa fa-angle-right" style="float: right"></span></a>
                        <ul id="menu-academico-sub">
                            <li id="menu-academico-avaliacoes">
                                <a href="/Home/Slider"><i class="fa fa-plus-square"></i> <span>Add Slider</span></a>
                            </li>
                            @Html.Action("SliderSideBar", "Home")
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "width:100%" }))
                        {
                            @Html.AntiForgeryToken()
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> <span> Sign Out</span></a>
                            </li>
                        }
                    }
                </ul>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <script>
            var toggle = true;

            $(".sidebar-icon").click(function () {
                if (toggle) {
                    $(".page-container").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
                    $("#menu span").css({ "position": "absolute" });
                }
                else {
                    $(".page-container").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
                    setTimeout(function () {
                        $("#menu span").css({ "position": "relative" });
                    }, 400);
                }

                toggle = !toggle;
            });
        </script>
        <!--js -->
        <script src="~/Content/js/jquery.nicescroll.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/Content/js/bootstrap.min.js"></script>
    </body>
</html>
