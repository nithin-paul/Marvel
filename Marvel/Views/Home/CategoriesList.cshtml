@model IEnumerable<Marvel.Models.CategoryVM>
@if (Model != null)
{
<h3 class="head1">Categories</h3>
    <div class="grid_12">
        <div class="gallery">
            <div class="row">
                @foreach (var categories in Model)
                {
                    <div class="grid_4">
                        <div class="gal_item">
                            <a href="Home/Items/@categories.Id">
                                <img src="~/Content/Images/@(Path.GetFileNameWithoutExtension(categories.ImageUrl) + "_thumb" + Path.GetExtension(categories.ImageUrl))" alt="">
                                <div class="gal_caption">@categories.Name</div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

}
